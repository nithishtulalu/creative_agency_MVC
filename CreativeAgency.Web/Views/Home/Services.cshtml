@{
    ViewData["Title"] = "Services";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="services-page container">
    <div class="services-title">
        <h2>Our Services</h2>
    </div>

	<div class="service-block">
        <div class="service-icon">
            <img src="~/images/service_seo.jpg" alt="SEO Icon" />
        </div>
        <div class="service-content">
            <h3>SEO Optimization</h3>
            <p>
                Boost your website visibility and rankings with our expert SEO services.
                We specialize in keyword research, technical optimization, and link building strategies
                that help your website appear on the first page of search engine results.
            </p>
        </div>
	</div>

    <div class="service-block">
        <div class="service-icon">
            <img src="~/images/service_content_hero.jpg" alt="Content Marketing Icon" />
        </div>
        <div class="service-content">
            <h3>Content Marketing</h3>
            <p>
                We craft compelling content strategies that engage your audience and drive traffic.
                From blog posts and case studies to whitepapers and social media content,
                we create valuable and relevant material tailored to your brand voice.
            </p>
        </div>
    </div>

    <div class="service-block">
        <div class="service-icon">
            <img src="~/images/service_social.jpg" alt="Social Media Icon" />
        </div>
        <div class="service-content">
            <h3>Social Media Management</h3>
            <p>
                Grow your brand presence across platforms like Instagram, Facebook, and LinkedIn.
                We manage your content calendar, engage with your audience, and track performance metrics.
            </p>
        </div>
    </div>

    <div class="service-block">
        <div class="service-icon">
            <img src="~/images/service_web.jpg" alt="Social Media Icon" />
        </div>
        <div class="service-content">
            <h3>Web Development</h3>
            <p>
                Our development team builds responsive, SEO-friendly websites that provide seamless user experiences across all devices.
                Whether it's a corporate site or a custom application, we bring your digital vision to life.
            </p>
        </div>
    </div>
</div>
